<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-fingerprint-sdk" version="0.1.0"
  xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <name>ColumboFingerprintWrapper</name>
  <js-module name="SimplFingerprintWrapper" src="www/SimplFingerprintWrapper.js">
    <clobbers target="cordova.plugins.SimplFingerprintWrapper" />
  </js-module>
 
  <platform name="android">
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="SimplFingerprintWrapper">
        <param name="android-package" value="com.simpl.android.fingerprint" />
      </feature>
    </config-file>
    <config-file parent="/*" target="AndroidManifest.xml"></config-file>
    <source-file src="src/android/SimplFingerprintWrapper.java" target-dir="src/integratedbiometrics" />

    <source-file src="src/android/iBScanCommon-release.jar" target-dir="libs"/>
    <source-file src="src/android/iBScanUltimate-release.jar" target-dir="libs"/>
    
    <source-file src="src/android/iBScanCommon-release.aar" target-dir="libs"/>
    <source-file src="src/android/iBScanUltimate-release.aar" target-dir="libs"/>
    
    <framework custom="true" src="src/android/build.gradle" type="gradleReference" />
  </platform>
</plugin>
